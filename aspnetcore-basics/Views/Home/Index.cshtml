@model List<aspnetcore_basics.Models.Course>
@* Bu durumda index.cshtml Render edildiğinde buradaki h1 içeriği doğrudan
   RenderBody()'nin içerisine kopyalanacak, @section Header ise
   RenderSection()'da kopyalanacak yerini tanımlamış olduk böylelikle *@

@section Header {
    @await Html.PartialAsync("_Header")
}

<div class="row">
    @foreach (var course in Model) {
        @if(course.IsActive && course.isHome) {
           
            <div class="col-3">
                <div class="card">
                    <img
                    src="~/img/@course.Image"
                    class="card-img-top"
                    alt="@course.Title"
                    />
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text">@course.Description</p>
                        <a
                        class="btn btn-primary"
                        asp-controller="Course"
                        asp-action="Details"
                        asp-route-id="@course.Id"
                        >Detay</a>
                    </div>
                </div>
            </div>
        }
    }
</div>